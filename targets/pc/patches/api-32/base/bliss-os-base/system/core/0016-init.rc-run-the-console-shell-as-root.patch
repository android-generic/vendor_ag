Date: Wed, 29 Oct 2014 23:25:57 +0800
Subject: [PATCH 16/38] init.rc: run the console shell as root

To make debugging easier.
---
 rootdir/init.rc | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/rootdir/init.rc b/rootdir/init.rc
index 8a385595e..00e3f4fc8 100644
--- a/rootdir/init.rc
+++ b/rootdir/init.rc
@@ -1267,7 +1267,7 @@ service console /system/bin/sh
     class core
     console
     disabled
-    user shell
+#   user shell
     group shell log readproc
     seclabel u:r:shell:s0
     setenv HOSTNAME console
