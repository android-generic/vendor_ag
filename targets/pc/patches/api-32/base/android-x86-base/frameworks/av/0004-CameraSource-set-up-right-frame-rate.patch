+++ b/media/libmediaplayerservice/StagefrightRecorder.h
@@ -176,6 +176,7 @@ private:
     sp<MediaCodecSource> mVideoEncoderSource;
 
     bool mStarted;
+    bool mUserSetupFrameRate;
